#! /bin/bash
# date command: MACOS

dow='fri'
title='A Few Points for Friday '
subject='Few Points for Friday'
url_subject='few-points-friday'
userdir=$HOME
bin_dir=$userdir/bin
subject_dir=5-few-points-friday
posts_dir=$userdir/Sites/theologic.us/content/posts/$subject_dir
# posts_dir=$userdir/Temp/$subject_dir
Category='Links'
Tag='A Few Points for Friday'

# Clear current weeks
weeks=$bin_dir/weeks
true > $weeks

echo "Last entry for $subject: "
echo "$(ls -1 $posts_dir | tail -n1)"

# Set the prompt for the select command
echo "Setting up posts for $subject"
PS3="Select a date or 'q' to quit: "

# Give me the next five weeks starting on Sunday
sundays=( +0 +7 +14 +21 +28 +35 +42 +49 +56 +63 +70 )
for i in "${sundays[@]}"; do
  echo "$(date -j -v+"$dow" -v"$i"d +%F)" >> $bin_dir/weeks
done

next5weeks=$(cat $weeks)

# Show a menu and ask for input.
select workingDay in $next5weeks; do
    if [ -n "$workingDay" ]; then
        echo ${workingDay}
    fi
    break
done

# set your dates for each post
date=`date -j -f %Y-%m-%d $workingDay +%F`
day=`date -j -f %Y-%m-%d $date '+%A %F'`

echo "Publishing '$subject' starting the week of" $day"!"

read -p "Are you sure? " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]
then
	future=( +0 +7 +14 +21 +28 +35 +42 +49 +56 +63 +70 )
	for i in "${future[@]}"; do
	  dates=`date -j -f %Y-%m-%d -v"$i"d $date +%F`
      cat << EOF > "$posts_dir"/x-"$dates"-"$url_subject".md
---
title: '$title'
author: Joseph Louthan
type: post
publishDate: $dates
url: /$url_subject/$dates-$url_subject/
categories:
  - $Category
tags:
  - '$Tag'
draft: true
---
EOF
	done
fi